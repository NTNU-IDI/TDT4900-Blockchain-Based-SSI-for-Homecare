{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "typeRoots": ["./node_modules/@types", "./types"], // Add this line
    "baseUrl": ".", // Optional: Helps with module resolution
    "paths": {
      "@env": ["./env.d.ts"] // Optional: Helps resolve the @env module
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "env.d.ts"], // Add this line
  "exclude": ["node_modules"]
}